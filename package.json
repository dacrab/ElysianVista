{
  "name": "elysian-vista",
  "version": "0.3.1",
  "description": "A monorepo template built with Bun, Hono, Vite, and React",
  "author": "Steve Simkins",
  "license": "MIT",
  "homepage": "https://github.com/stevedylandev/bhvr",
  "workspaces": [
    "./server",
    "./client",
    "./shared"
  ],
  "scripts": {
    "dev:client": "cd client && bun run dev",
    "dev:server": "bun run --cwd ./server dev",
    "dev:shared": "cd shared && bun run dev",
    "dev": "concurrently \"bun run dev:shared\" \"bun run dev:server\" \"bun run dev:client\"",
    "build:client": "cd client && bun run build",
    "build:shared": "cd shared && bun run build",
    "build:server": "cd server && bun run build",
    "build": "bun run build:shared && bun run build:server && bun run build:client",
    "postinstall": "bun run build:shared && bun run build:server",
    "db:seed": "bun run --env-file .env.local supabase/seed.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,css,scss,md}\"",
    "lint:client": "cd client && bun run lint",
    "lint:fix": "cd client && bun run lint:fix"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo"
  ],
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bun": "latest",
    "concurrently": "^9.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.51.0",
    "hono": "^4.8.4"
  }
}
